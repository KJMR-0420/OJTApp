<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:paddingVertical="25dp"
    android:paddingHorizontal="50dp">

    <ImageView
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/question_mark_circle"
        android:contentDescription="saved"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="You have unsaved changes"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/black"
        android:paddingVertical="10dp"
        />

    <Button
        android:id="@+id/btn_backToEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:background="@drawable/graphics_button_1"
        android:backgroundTint="@color/strokes"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Back to edit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_cancelAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/graphics_button_1"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Cancel All"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>