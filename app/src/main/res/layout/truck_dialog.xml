<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/truck_sheet_dialog"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/bottom_sheet_background">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_locations"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="240dp"
            android:layout_marginHorizontal="25dp"
            android:gravity="center"
            android:paddingTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txtPickUpAdd"
                    android:layout_width="wrap_content"
                    android:maxWidth="130dp"
                    android:layout_height="50dp"
                    android:maxLines="2"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:fontFamily="@font/montserrat_medium"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text="Pick Up\nAddress Here"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Pick Up"
                    android:layout_marginVertical="2dp"
                    android:layout_gravity="start"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintVertical_bias="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txtDropOffAdd"
                    android:layout_width="wrap_content"
                    android:maxWidth="130dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:fontFamily="@font/montserrat_medium"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxLines="2"
                    android:text="Destination\nAddress Here"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Destination"
                    android:layout_marginVertical="2dp"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageButton
            android:id="@+id/btnTruck"
            android:layout_width="335dp"
            android:layout_height="90dp"
            android:background="@drawable/borderbutton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_locations"
            app:layout_constraintVertical_bias="0.245" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_icons"
            app:layout_constraintBottom_toBottomOf="@+id/btnTruck"
            app:layout_constraintEnd_toEndOf="@+id/btnTruck"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintStart_toStartOf="@+id/btnTruck"
            app:layout_constraintTop_toTopOf="@+id/btnTruck"
            app:layout_constraintVertical_bias="0.533" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/truck"
            app:layout_constraintBottom_toBottomOf="@+id/textView13"
            app:layout_constraintEnd_toEndOf="@+id/textView13"
            app:layout_constraintStart_toStartOf="@+id/textView13"
            app:layout_constraintTop_toTopOf="@+id/textView13" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="Truck"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/btnTruck"
            app:layout_constraintEnd_toEndOf="@+id/btnTruck"
            app:layout_constraintHorizontal_bias="0.048"
            app:layout_constraintStart_toEndOf="@+id/textView13"
            app:layout_constraintTop_toTopOf="@+id/btnTruck"
            app:layout_constraintVertical_bias="0.238" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="Max: 1000 kg\n2.1 x 1.2 x 1.2 Meter Up to 1000kg"
            android:textColor="@color/secondary_text"
            app:layout_constraintBottom_toBottomOf="@+id/btnTruck"
            app:layout_constraintEnd_toEndOf="@+id/btnTruck"
            app:layout_constraintHorizontal_bias="0.285"
            app:layout_constraintStart_toEndOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:background="@drawable/graphics_button_1"
            android:fontFamily="@font/montserrat_medium"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnTruck"
            app:layout_constraintVertical_bias="0.404" />

        <TextView
            android:id="@+id/txtChargeTruck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="Fee"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/btnTruck"
            app:layout_constraintEnd_toEndOf="@+id/btnTruck"
            app:layout_constraintHorizontal_bias="0.923"
            app:layout_constraintStart_toStartOf="@+id/btnTruck"
            app:layout_constraintTop_toTopOf="@+id/btnTruck"
            app:layout_constraintVertical_bias="0.43" />

        <TextView
            android:id="@+id/editTextTextPersonName"
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:ems="10"
            android:fontFamily="@font/montserrat_medium"
            android:inputType="textPersonName"
            android:text="₱"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnTruck"
            app:layout_constraintEnd_toStartOf="@+id/txtChargeTruck"
            app:layout_constraintTop_toTopOf="@+id/btnTruck"
            app:layout_constraintVertical_bias="0.439" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>