<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Receiver_addressDetailsDialog"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    android:paddingHorizontal="28dp"
    android:paddingTop="20dp"
    android:paddingBottom="3dp">

    <TextView
        android:id="@+id/Receiver_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="18dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Receiver Address Detail"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/receiver_edTextAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/borders"
                android:drawableStart="@drawable/iconaddress"
                android:drawablePadding="10dp"
                android:focusable="false"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Receiver address"
                android:maxLines="1"
                android:padding="12dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/receiver_edTextPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/borders"
                android:drawableStart="@drawable/iconphone"
                android:drawablePadding="10dp"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Phone Number"
                android:inputType="number"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/receiver_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/borders"
                android:drawableStart="@drawable/iconperson"
                android:drawablePadding="10dp"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Contact Name"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/Receiver_btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:background="@drawable/graphics_button_1"
                android:fontFamily="@font/montserrat_medium"
                android:text="Confirm"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/horizontal_line" />

</LinearLayout>